<Window x:Class="WpfIntroduccion.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIntroduccion"
        mc:Ignorable="d"
        Title="Login" Height="220" Width="400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Usuario" Width="200" FontWeight="Bold" Margin="0,0,50,0"></Label>
                <TextBox Width="200" Height="30" Background="Azure" x:Name="txtUsuario" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Contraseña" Width="200" FontWeight="Bold" Margin="0,0,50,0"></Label>
                <TextBox Width="200" Height="30" Background="Azure" x:Name="txtContraseña"></TextBox>
            </StackPanel>

            <StackPanel>
                <Button x:Name="btnAceptar" Content="Aceptar" Width="100" Height="30" Margin="10"></Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
